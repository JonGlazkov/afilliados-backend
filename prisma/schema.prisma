generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Users {
  id         String      @id @default(uuid())
  email      String      @unique
  password   String
  role       Role        @default(CREATOR)
  creators   Creator[]
  affiliates Affiliate[]

  @@map("users")
}

model Creator {
  id       String    @id @default(uuid())
  name     String
  userId   String // 
  user     Users     @relation(fields: [userId], references: [id])
  products Product[]

  @@map("creator")
}

model Product {
  id          String        @id @default(uuid())
  name        String        @unique
  price       Int
  commission  Int
  creatorId   String
  creator     Creator       @relation(fields: [creatorId], references: [id])
  affiliates  Affiliate[]
  Transaction Transaction[]

  @@map("product")
}

model Transaction {
  id        String   @id @default(uuid())
  type      Int
  date      DateTime
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  value     Int
  seller    String

  @@map("transaction")
}

model Affiliate {
  id       String    @id @default(uuid())
  name     String
  userId   String
  user     Users     @relation(fields: [userId], references: [id])
  products Product[]

  @@map("affiliate")
}

enum Role {
  AFFILIATED
  CREATOR
}
