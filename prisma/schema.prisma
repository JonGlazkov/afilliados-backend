generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(uuid())
  email    String @unique
  password String

  @@map("users")
}

model Seller {
  name         String        @unique
  role         Int
  transactions Transaction[]
}

model Transaction {
  id              String   @id @default(uuid())
  transactionType Int
  date            DateTime
  product         String
  value           Int
  sellerType      Int
  sellerName      String?
  seller          Seller?  @relation(fields: [sellerName], references: [name])

  @@map("transaction")
}
